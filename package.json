{
  "name": "tech-stack-monorepo",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@10.7.1",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "clean": "turbo run clean",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{js,ts,tsx,jsx,json}": [
      "eslint --fix"
    ]
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "turbo": "^2.5.3"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.13.2",
    "eslint": "^9.27.0",
    "typescript": "^5.8.3"
  }
}
